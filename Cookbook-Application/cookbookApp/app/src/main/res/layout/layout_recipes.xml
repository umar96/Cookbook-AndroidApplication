                    android:typeface="normal"
                    android:fontFamily="serif-monospace"
                    android:textStyle="normal|bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <Button
                    android:text="Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
