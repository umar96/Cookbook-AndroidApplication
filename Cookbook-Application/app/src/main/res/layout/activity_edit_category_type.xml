<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_category_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.unaizrehmani.finalcookbook.EditCategoryType"
    android:background="@drawable/create_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Edit Categories"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:layout_weight="5"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <EditText
                android:layout_width="match_parent"
                android:textColorHint="@android:color/white"
                android:layout_height="match_parent"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/addCategoryInput"
                android:layout_weight="1"
                android:gravity="center_vertical|center"
                android:hint="Category to Change" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="10dp">

                <Button
                    android:text="ADD"
                    android:background="@drawable/button_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/addCategoryButton"
                    android:textColor="@android:color/white"
                    android:layout_weight="1" />

                <Button
                    android:text="Edit"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/editCategoryButton"
                    android:layout_weight="1"
                     />

                <Button
                    android:text="Delete"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/deleteCategoryButton"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:id="@+id/currentCategoryListView"
            android:layout_weight="3"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <Button
            android:text="Types"
            android:background="@drawable/button_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/finishEditCategories"
            android:layout_weight="5"
            android:textColor="@android:color/white"
             />
    </LinearLayout>

</RelativeLayout>
