<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/main_bg"
    tools:context="com.example.unaizrehmani.finalcookbook.HelpScreen"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:text="FINDING RECIPE"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/findingRecipe"
            android:layout_weight="7"
            android:layout_marginTop="-20dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Select the ingredients you wish to have included and excluded in your recipe, select the type and category of the dish, and you will get a list of recipe results for your choosing!"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/findingRecipeInfo"
            android:layout_weight="0"
            android:textStyle="normal|bold"
            android:textAlignment="center" />


            <TextView
                android:text="CREATING RECIPE"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/creatingRecipe"
                android:layout_weight="7"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="normal|bold" />

            <TextView
                android:text="To create a recipe, select from a list of ingredients the ones found in your new recipe, give it a name, select the category and type and input some cooking directions, save it and you're done!"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/creatingRecipeInfo"
                android:layout_weight="0"
                android:textStyle="normal|bold"
                android:textAlignment="center" />

        <TextView
            android:text="EDITING INFORMATION"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editingInfo"
            android:layout_weight="7"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <TextView
            android:text="You are able to edit almost any information of a recipe, from the type and category to the name of the ingredients, the new information is now saved in place!"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editingInfoInfo"
            android:layout_weight="0"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

    </LinearLayout>
</RelativeLayout>
