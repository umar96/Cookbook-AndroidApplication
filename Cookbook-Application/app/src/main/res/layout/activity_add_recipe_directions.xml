<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_recipe_directions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.unaizrehmani.finalcookbook.AddRecipeDirections">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Add Directions"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView6"
            android:layout_weight="2"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <EditText
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@android:color/white"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/addRecipeDirectionEditText"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Add Step..." />

            <Button
                android:text="Add Step"
                android:background="@drawable/button_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/addRecipeDirectionStepButton"
                android:layout_weight="3"
                android:textColor="@android:color/white"
                android:minHeight="0dp"
                android:minWidth="0dp" />

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/addRecipeDirectionListView"
            android:visibility="visible" />

        <Button
            android:text="Create"
            android:background="@drawable/button_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/createRecipeFinalButton"
            android:textColor="@android:color/white"
            android:layout_weight="2" />
    </LinearLayout>
</RelativeLayout>
